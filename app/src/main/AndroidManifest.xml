        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.QuanLyChiTieu">
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings2"></activity>

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-3940256099942544~3347511713" />

        <activity
            android:name=".ui.login.LoginActivity"
            android:noHistory="true"
            android:theme="@style/Theme.QuanLyChiTieu.NoActionBar.Launcher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DetailIncomeExpanseActivity" />
        <activity android:name=".ui.user.edituser.EditUserActivity" />
        <activity android:name=".ui.user.adduser.AddUserActivity" />
        <activity android:name=".ui.userinfo.UserInfoActivity" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.QuanLyChiTieu.NoActionBar">

            <!-- <intent-filter> -->
            <!-- <action android:name="android.intent.action.MAIN" /> -->


            <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
